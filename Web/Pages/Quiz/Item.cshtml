@page "{quizId}/{itemId}"
@model BackendLab01.Pages.QuizModel
@{
    ViewData["Title"] = "Quiz";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <h3 class="mb-4">@Model?.Question</h3>

    <form method="post">
        @if (Model.Answers is not null)
        {
            @foreach (var item in Model?.Answers)
            {
                <div class="form-check mb-3">
                    <input class="form-check-input" type="radio" value="@item" asp-for="@Model.UserAnswer" id="@item"/>
                    <label class="form-check-label" for="@item">@item</label>
                </div>
            }
        }
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-lg">Zapisz</button>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa; 
    }

    h1, h3 {
        color: #343a40;  
    }

    button {
        width: 200px;  
        padding: 10px;  
        border-radius: 5px;
        font-weight: bold;  
    }

    button:hover {
        background-color: #0056b3;  
    }

</style>